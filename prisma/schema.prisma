generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model IpCache { // Renamed to reflect focus
  id          String   @id @default(cuid())
  cidrBlock   String   @unique // Store as a standard TEXT column in Postgres
  data        Json     // The full RDAP JSON response associated with this *block*.
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt // Represents the freshness of the *block's* data.

  @@index([cidrBlock]) // Crucial for efficient containment lookups.
}

model DomainCache {
  id          String   @id @default(cuid())
  domainName  String   @unique // e.g., "example.com"
  data        Json     // Contains the RDAP Domain JSON structure
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  @@index([domainName])
}
